<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mymusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/musicappicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Player" />
        <activity android:name=".AllSongs" />
        <activity android:name=".Artist" />
        <activity android:name=".Favorite" />
        <activity android:name=".Search" />
        <activity android:name=".Geners" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".Radio"></activity>
    </application>

</manifest>